{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
    },
    "tasks": [
        // ========================= CONFIGURE
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                ".", 
                "-Bbuild"
            ],
            "problemMatcher": []
        },
        // ========================= CLEAN
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build/"
            ],
            "problemMatcher": []
        },
        // ========================= BUILD
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "-j4"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        },
        // ========================= CPP CHECK
        {
            "label": "cpp check", 
            "type": "shell", 
            "command": "cppcheck", 
            "args": [
                "src", 
                "libraries", 
                "application"
            ]
        },
        // ========================= RUN ALL
        {
            "label": "run all",
            "type": "shell",
            "command": "./build/application/application",
            "problemMatcher": [],
            "dependsOn": [
                "run tests"
            ]
        },
        // ========================= RUN GAME
        {
            "label": "run game",
            "type": "shell",
            "command": "./build/application/application",
            "args": [
                "0"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ]
        },
        // ========================= RUN TESTS
        {
            "label": "run tests",
            "type": "shell",
            // "command": "./example",
            "command": "ctest",
            "args": [
                // "--abort-after=1"
                // "--progress"
                // "--verbose"
                // "--output-on-failure"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/test"
            }
        },
        // ========================= CLEAN & CONFIGURE
        {
            "label": "clean and configure",
            "type": "shell",
            "dependsOn": [
                "clean",
                "configure"
            ],
            "problemMatcher": []
        }
    ]
}