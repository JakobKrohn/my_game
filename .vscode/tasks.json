{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
    },
    "tasks": [
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                ".", 
                "-Bbuild"
                // "-GNinja"
            ],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build/"
            ],
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "run all",
            "type": "shell",
            "command": "./build/tools/MY_GAME_tool",
            "problemMatcher": [],
            "dependsOn": [
                "run tests"
            ]
        },
        {
            "label": "run game",
            "type": "shell",
            "command": "./build/application/application",
            "args": [
                "0"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ]
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "./MY_GAMETest",
            // "command": "ctest",
            "args": [
                "--abort-after=1"
                // "--progress"
                // "--verbose"
                // "--output-on-failure"
            ],
            "problemMatcher": [],
            "dependsOn": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build/test"
            }
        },
        {
            "label": "clean and configure",
            "type": "shell",
            "dependsOn": [
                "clean",
                "configure"
            ],
            "problemMatcher": []
        }
    ]
}